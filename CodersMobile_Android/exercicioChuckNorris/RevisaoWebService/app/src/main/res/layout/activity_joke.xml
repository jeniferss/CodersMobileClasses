<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical"
    tools:context=".showjoke.view.JokeActivity">

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="@dimen/dim_150_dp"
        android:layout_height="@dimen/dim_150_dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_50_dp" />

    <TextView
        android:id="@+id/tvJoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_20_dp"
        android:gravity="center"
        android:textSize="@dimen/dim_20_sp"
        android:textStyle="italic" />

</LinearLayout>